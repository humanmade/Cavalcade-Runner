# Typically, place in your /lib/systemd/system/ folder and sudo systemctl enable cavalcade.service
[Unit]
Description=CavalcadeRunner

[Service]
TimeoutStartSec=0
TimeoutStopSec=600
Restart=always
WorkingDirectory=/srv/www/webroot
User=www-data
SuccessExitStatus=0 3
RestartPreventExitStatus=3
ExecStart=/usr/bin/env bash -c '(test ! -f /etc/cavalcade.disabled || exit 3) && /etc/cavalcade/bin/cavalcade'

[Install]
WantedBy=multi-user.target
